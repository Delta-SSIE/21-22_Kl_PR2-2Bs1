<Window x:Class="_03_WPF_09_Fotoprohlizec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_WPF_09_Fotoprohlizec"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Image x:Name="PhotoImg"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               />
        
        <Button x:Name="LoadBtn"
                Grid.Row="1"
                Grid.Column="0"
                Content="Load" Click="LoadBtn_Click"
                />

        <TextBlock x:Name="FilenameTB"
                   Grid.Row="1"
                   Grid.Column="1"
                   />
    </Grid>
</Window>
