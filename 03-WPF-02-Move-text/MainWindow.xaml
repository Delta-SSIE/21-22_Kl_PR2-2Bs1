        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_WPF_02_Move_text"
        mc:Ignorable="d"
        Title="MainWindow" Height="133" Width="248">
    <Grid>
        <TextBox x:Name="InputTB" 
                 HorizontalAlignment="Left" 
                 Margin="47,31,0,0" 
                 Text="Vlož text" 
                 VerticalAlignment="Top" 
                 Width="120"
                 />
        <TextBox x:Name="OutputTB" 
                 HorizontalAlignment="Left" 
                 Margin="47,54,0,0" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="120" IsEnabled="False" 
                 
                 />
        <Button x:Name="MoveBtn" 
                Content="Přesuň" 
                HorizontalAlignment="Left" 
                Margin="172,31,0,0" 
                VerticalAlignment="Top" 
                Height="41" 
                Click="MoveBtn_Click" 
                IsDefault="True"
                />

    </Grid>
</Window>
